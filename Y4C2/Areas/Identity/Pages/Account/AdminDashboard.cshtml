@page
@model AdminDashboardModel

@inject UserManager<IdentityUser> UserManager


@{
    ViewData["Title"] = "AdminDashboard";
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Simple Responsive Admin</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="~/admin/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="~/admin/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="~/admin/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />

    <link rel="stylesheet" type="text/css" href="~/css/SideNav.css" />
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
</head>
<body>

    <!-- The sidebar -->
    <div class="sidebar">
        <a class="active" asp-controller="Identity/Account" asp-action="AdminDashboard">Home</a>
        <a asp-controller="Manage" asp-action="AddContent">Create</a>
        <a asp-controller="Manage" asp-action="ManageContent">Manage</a>
        
    </div>

    <!-- Page content -->
    <div class="content">

        <strong>Welcome, @UserManager.GetUserName(User) ! </strong>
    </div>
