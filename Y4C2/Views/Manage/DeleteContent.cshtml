@model Y4C2.Models.AddContent

@{
    ViewData["Title"] = "DeleteContent";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/SideNav.css" />
</head>

<!-- The sidebar -->
<div class="sidebar">
    <a asp-controller="Identity/Account" asp-action="AdminDashboard">Home</a>
    <a asp-controller="Manage" asp-action="AddContent">Create</a>
    <a class="active" asp-controller="Manage" asp-action="ManageContent">Manage</a>
    
</div>

<!-- Page content -->
<div class="content">
    <br />
    <h3 align="center">Are you sure you want to delete this?</h3>
    <hr />
    <div>

        <h2 align="center">@Model.Title</h2>
        <h4 align="center">@Model.Description</h4>
        <br />
        <div align="center">
            <iframe width="560"
                    height="315"
                    src="@Model.Video"
                    frameborder="0"
                    allowfullscreen
                    display="block"
                    ></iframe><br /><br /><hr />

            <iframe width="560"
                    height="100"
                    src="@Model.Audio"
                    frameborder="0"
                    allowfullscreen></iframe>

        </div>
        <br />



        <hr />


        @Html.Raw(Model.BlogContent)
        <br />
        <form asp-action="DeleteContent">
            <input type="hidden" asp-for="Id" />
            <div align="center">
                <input type="button" value="Cancel" class="btn btn-default" onclick="location.href='@Url.Action("ManageContent", "Manage")'" />
                <input type="submit" value="Delete" class="btn btn-default" />
            </div>
        </form>
    </div>
    </div>