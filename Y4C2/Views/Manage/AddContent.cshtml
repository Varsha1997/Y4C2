@model Y4C2.Models.AddContent

@{
    ViewData["Title"] = "Add Content";
}

<head>
    <link rel="stylesheet" href="~/css/studentLayout.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" type="text/css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote-bs4.css" rel="stylesheet" type="text/css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote-bs4.js"></script>
</head>
<br />
<h2>Add A New Theme</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Content" asp-action="AddContent" asp-method="Post" id="add-form">

            <div class="form-group">
                <label for="Title">Title</label>
                <input type="text" class="form-control" name="Title" placeholder="Enter the theme's title" />
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input type="text" class="form-control" name="Description" placeholder="Enter the theme's Description" />
            </div>
            <div class="form-group">
                <label for="Video">Video</label>
                <input type="text" class="form-control" name="Video" placeholder="Enter the url of the themes video" />
            </div>
            <div class="form-group">
                <label for="Audio">Audio</label>
                <input type="text" class="form-control" name="Audio" placeholder="Enter the url of the themes audio" />
            </div>

            <input type="hidden" name="ArchiveStatus" value="Active" />

            <h2>Upload Blog</h2>

            <textarea id="summernote" name="BlogContent"></textarea>
            <script>
                $('#summernote').summernote({
                    placeholder: 'Enter Blog Content Here.',
                    tabsize: 2,
                    height: 300,
                    width: 1000
                });
            </script>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
